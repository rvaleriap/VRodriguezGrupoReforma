@model ML.Personas
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar personas</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "Formulario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class=" form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IdPersona, new { @class = "hidden" })
                        @Html.TextBoxFor(model => model.IdPersona, new { @class = "hidden form-control" })
                        @Html.ValidationMessageFor(model => model.IdPersona)
                        @*hidden*@
                    </div>
                </div>
                <div class="row">
                    <div class=" form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Nombre)
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })

                                @Html.ValidationMessageFor(model => model.Nombre)
                            </div>
                        </div>

                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Direccion)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                            @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.Direccion)
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Edad)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                            @Html.TextBoxFor(model => model.Edad, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.Edad)
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Correo)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.Correo)
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.HabilidadPrincipal)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                            @Html.TextBoxFor(model => model.HabilidadPrincipal, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.HabilidadPrincipal)
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.HabilidadSecundaria)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-circle-user"></i></span>
                            @Html.TextBoxFor(model => model.HabilidadSecundaria, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.HabilidadSecundaria)
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "Index", "Formulario", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

